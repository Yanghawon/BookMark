<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="com.android.support.design"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/list_search_edt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="search data"
            />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/list_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search_black_24dp"
            fab:backgroundTint="@color/colorPrimary"
            fab:fabSize="mini"
            fab:rippleColor="@color/colorPrimaryDark" />

        <Spinner
            android:id="@+id/list_search_sort_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"></ListView>
    </LinearLayout>

</LinearLayout>
